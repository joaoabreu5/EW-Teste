extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Página da Espécie '#{especie[0].Espécie}'
      h2 Nome Científico: '#{especie[0]['Nome Científico']}'
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Espécie
          th Estado 
          th Número de intervenções

        each p in especie
          tr
            td 
              a(href='/'+p._id)= p._id
            td= p.Freguesia
            td 
              a(href='/especies'+p.Espécie)= p.Espécie
            td= p.Estado
            if p['Número de intervenções'] === null
              td= 0
            else
              td= p['Número de intervenções']

      h3
        a(href='/') Voltar à pagina inicial
              
    footer.w3-container.w3-teal
      h5 Generated by PlantasApp::EngWeb2023 on #{d}
